<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.cafeSnoopy.control.AsistenciaController">
   <children>
      <VBox spacing="20" alignment="TOP_CENTER" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <!-- Header -->
         <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-padding: 15;">
            <Label text="📋" style="-fx-font-size: 24px;"/>
            <Label text="Calculadora" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
         </HBox>

         <!-- Formulario de Registro -->
         <GridPane hgap="15" vgap="15" style="-fx-padding: 20; -fx-background-color: #ecf0f1; -fx-background-radius: 10;">
            <columnConstraints>
               <ColumnConstraints prefWidth="120" />
               <ColumnConstraints prefWidth="250" />
               <ColumnConstraints prefWidth="120" />
               <ColumnConstraints prefWidth="250" />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints prefHeight="40" />
               <RowConstraints prefHeight="40" />
               <RowConstraints prefHeight="40" />
               <RowConstraints prefHeight="60" />
            </rowConstraints>

            <!-- Fila 1 -->
            <Label text="🔢 Número 1:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtNum1" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Ingrese el primer número" style="-fx-padding: 8;"/>

            <Label text="🔢 Número 2:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtNum2" GridPane.columnIndex="3" GridPane.rowIndex="0" promptText="Ingrese el segundo número" style="-fx-padding: 8;"/>

            <!-- Fila 2 - Operaciones -->
            <Label text="🧮 Operación:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="comboOperacion" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Seleccione operación" style="-fx-padding: 8;"/>

            <Label text="📅 Fecha:" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="datePicker" GridPane.columnIndex="3" GridPane.rowIndex="1" style="-fx-padding: 8;"/>

            <!-- Fila 3 - Resultado -->
            <Label text="✅ Resultado:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
            <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="3">
               <Label fx:id="result" text="0.00" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5; -fx-min-width: 100;"/>
               <Label text="📝 Estado: Pendiente" style="-fx-text-fill: #e67e22; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Fila 4 - Botones -->
            <HBox spacing="15" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="4">
               <Button text="➕ Calcular" onAction="#calcular" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 14px;"/>
               <Button text="🔄 Limpiar" onAction="#limpiar" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 14px;"/>
               <Button text="💾 Guardar" onAction="#guardar" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 14px;"/>
               <Button text="❌ Cancelar" onAction="#cancelar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 14px;"/>
            </HBox>
         </GridPane>

         <!-- Panel de Información -->
         <HBox spacing="30" alignment="CENTER">
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #2ecc71; -fx-background-radius: 10; -fx-min-width: 150;">
               <Label text="📊 Total Calculos" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
               <Label fx:id="labelTotal" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>

            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #9b59b6; -fx-background-radius: 10; -fx-min-width: 150;">
               <Label text="✅ Correctos" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
               <Label fx:id="labelCorrectos" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>

            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #e74c3c; -fx-background-radius: 10; -fx-min-width: 150;">
               <Label text="❌ Errores" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
               <Label fx:id="labelErrores" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>
         </HBox>

         <!-- Historial de Operaciones -->
         <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-max-width: 600;">
            <Label text="📋 Historial de Operaciones" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

            <TableView fx:id="tableHistorial" prefHeight="150" style="-fx-background-radius: 5;">
               <columns>
                  <TableColumn text="Fecha" prefWidth="100"/>
                  <TableColumn text="Operación" prefWidth="100"/>
                  <TableColumn text="Número 1" prefWidth="80"/>
                  <TableColumn text="Número 2" prefWidth="80"/>
                  <TableColumn text="Resultado" prefWidth="100"/>
                  <TableColumn text="Estado" prefWidth="80"/>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </VBox>

         <!-- Footer -->
         <Label text="⚡ Sistema de Asistencia - Cafe Snoopy © 2024" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>
      </VBox>
   </children>
</AnchorPane>