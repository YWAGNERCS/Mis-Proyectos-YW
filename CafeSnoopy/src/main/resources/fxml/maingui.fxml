<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane fx:id="bp" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.cafeSnoopy.control.MainguiController">
    <top>
        <VBox spacing="0">
            <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
                <menus>
                    <Menu fx:id="menu1" mnemonicParsing="false" text="Archivo">
                        <items>
                            <MenuItem fx:id="menuItem1" mnemonicParsing="false" text="Asistencia" />
                            <MenuItem fx:id="menuItem2" mnemonicParsing="false" text="Participantes" />
                            <SeparatorMenuItem />
                            <MenuItem fx:id="menuItemC" mnemonicParsing="false" text="Salir" />
                        </items>
                    </Menu>
                    <Menu fx:id="menu2" mnemonicParsing="false" text="Herramientas">
                        <items>
                            <MenuItem text="Configuración" />
                            <MenuItem text="Backup" />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Ayuda">
                        <items>
                            <MenuItem text="Acerca de" />
                            <MenuItem text="Manual de usuario" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>

            <ToolBar prefHeight="40.0" style="-fx-background-color: #2c3e50;">
                <Button text="Inicio" style="-fx-background-color: transparent; -fx-text-fill: white;">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0">
                            <Image url="@/images/home.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Separator orientation="VERTICAL" style="-fx-padding: 5;"/>
                <Label text="Cafe Snoopy - Sistema de Gestión" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0 10 0 0;"/>
            </ToolBar>
        </VBox>
    </top>

    <left>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #34495e;">
            <Label text="MÓDULOS PRINCIPALES" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 0 0 15 0;"/>

            <Button text="👥 Usuarios" onAction="#handleUsuariosButton" maxWidth="Infinity"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;"
                    styleClass="module-button"/>

            <Button text="📦 Productos" onAction="#handleProductosButton" maxWidth="Infinity"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;"
                    styleClass="module-button"/>

            <Button text="💰 Ventas" onAction="#handleVentasButton" maxWidth="Infinity"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;"
                    styleClass="module-button"/>

            <Button text="📊 Reportes" onAction="#handleReportesButton" maxWidth="Infinity"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;"
                    styleClass="module-button"/>

            <Button text="🔄 Inventario" onAction="#handleInventarioButton" maxWidth="Infinity"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;"
                    styleClass="module-button"/>

            <Separator style="-fx-background-color: #7f8c8d; -fx-padding: 20 0 10 0;"/>

            <Label text="HERRAMIENTAS" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 12px;"/>

            <Button text="⚙ Configuración" maxWidth="Infinity"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8;"/>

            <Button text="❓ Ayuda" maxWidth="Infinity"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8;"/>
        </VBox>
    </left>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="ALL_TABS" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="🏠 Inicio">
                    <content>
                        <ScrollPane fitToWidth="true" fitToHeight="true">
                            <VBox spacing="20" style="-fx-padding: 30;" alignment="TOP_CENTER">
                                <ImageView fitHeight="120.0" fitWidth="120.0">
                                    <Image url="@/images/logo.png" />
                                </ImageView>

                                <Label text="Bienvenido a Cafe Snoopy" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                                <Label text="Sistema Integral de Gestión de Cafetería" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>

                                <HBox spacing="30" alignment="CENTER" style="-fx-padding: 30 0 0 0;">
                                    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #ecf0f1; -fx-background-radius: 10;">
                                        <Label text="📊 Estadísticas" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                                        <Label text="150 Ventas hoy"/>
                                        <Label text="45 Usuarios activos"/>
                                        <Label text="89 Productos en stock"/>
                                    </VBox>

                                    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #ecf0f1; -fx-background-radius: 10;">
                                        <Label text="⚡ Acciones Rápidas" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                                        <Button text="Nueva Venta" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                                        <Button text="Agregar Producto" style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
                                        <Button text="Ver Reportes" style="-fx-background-color: #8e44ad; -fx-text-fill: white;"/>
                                    </VBox>
                                </HBox>

                                <Label text="© 2024 Cafe Snoopy - Todos los derechos reservados" style="-fx-text-fill: #bdc3c7; -fx-padding: 40 0 0 0;"/>
                            </VBox>
                        </ScrollPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 8; -fx-alignment: CENTER_LEFT;">
            <Label text="✅ Sistema conectado" style="-fx-text-fill: white;"/>
            <Separator orientation="VERTICAL" style="-fx-padding: 0 10 0 10;"/>
            <Label text="👤 Usuario: Admin" style="-fx-text-fill: white;"/>
            <Separator orientation="VERTICAL" style="-fx-padding: 0 10 0 10;"/>
            <Label text="🕒 Última actualización: 12:30 PM" style="-fx-text-fill: white;"/>
            <Separator orientation="VERTICAL" style="-fx-padding: 0 10 0 10;"/>
            <Label text="💾 Memoria: 256MB usados" style="-fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>