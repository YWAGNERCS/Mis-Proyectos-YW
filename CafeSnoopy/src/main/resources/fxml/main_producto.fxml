<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.cafeSnoopy.control.ProductoController"
            prefHeight="600.0" prefWidth="800.0">

    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <Label text="Gestión de Productos" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Separator/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="100" />
                <ColumnConstraints prefWidth="200" />
                <ColumnConstraints prefWidth="100" />
                <ColumnConstraints prefWidth="200" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30" />
                <RowConstraints prefHeight="30" />
                <RowConstraints prefHeight="30" />
                <RowConstraints prefHeight="30" />
                <RowConstraints prefHeight="30" />
                <RowConstraints prefHeight="30" />
            </rowConstraints>

            <Label text="Código:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtCodigo" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Nombre:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="txtNombre" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtDescripcion" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3"/>

            <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="txtPrecio" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Stock:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextField fx:id="txtStock" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

            <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <CheckBox fx:id="chkEstado" text="Activo" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="3">
                <Button text="Guardar" onAction="#guardarProducto" style="-fx-background-color: #4682B4; -fx-text-fill: white;"/>
                <Button text="Cancelar" onAction="#cancelarEdicion" style="-fx-background-color: #DC143C; -fx-text-fill: white;"/>
            </HBox>
        </GridPane>

        <Separator/>

        <TableView fx:id="tableProductos" prefHeight="300">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>